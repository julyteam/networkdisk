	<field name="user.name">
		<field-validator type="requiredstring">	
			<param name="trim">true</param> <!--  trim是否去空格 -->
			<message>用户名必填</message>	<!-- message用<s:fielderror></s:fielderror>接收 -->
		</field-validator>
		<field-validator type="stringlength">	
			<param name="trim">true</param>
			<param name="maxLength">10</param>
			<param name="minLength">4</param>
			<message>用户名去掉两端空格后长度为${minLength}到${maxLength}</message>
		</field-validator>
	</field>
